#!/bin/sh

run_update() {
	cd /usr/src
	make-base installall "${@}"
	make-base mergemasterall "${@}"
	cd /
}

set -x
set -e
if grep -q '[[:blank:]]/usr/src[[:blank:]]' /etc/fstab
then
	cd /
	mounted=`mount | grep ' /usr/src '`
	if test "${mounted}" = ""
	then
		mount /usr/src
		mount /usr/obj
		run_update "${@}"
		umount /usr/obj
		umount /usr/src
	else
		
		run_update "${@}"
	fi
else
	run_update "${@}"
fi
# eof
